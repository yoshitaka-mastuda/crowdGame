<!-- Navigation bar -->

<div class="container">
  <!-- Notice -->
  <% if notice.present? %>
      <div class="alert alert-dismissable alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <p><%= notice %></p>
      </div>
  <% end %>
  <% if alert.present? %>
      <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <p><%= alert %></p>
      </div>
  <% end %>

  <% if user_signed_in? %>
      <div Align="right" style="font-size:11pt;">
        <span>あなたのユーザ名: <%= current_user.username %></span><br>
        <span>ポイントランキング: <%= current_user.worker %>人中 <%= current_user.ranking %>位</span><br>
        <span>ランキングUPまで <%= current_user.rank_up_point %>ポイント</span><br>
        <span>現在 <%= current_user.doing_worker %>人が作業中です</span><br><br>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
      </div>
      <br>
      <div class="row">
        <div class="pull-right">
          <%= link_to tweet_insert_pending_path do %>
              <span style="font-size:12pt;" class="alert alert-danger">
                審査中:<%= current_user.pending_count %>
              </span>
          <% end %>&nbsp;
          <%= link_to tweet_insert_confirm_path do %>
              <span id='confirm' style="font-size:12pt;" class="alert alert-success">
                収集ポイント:<%= current_user.accept_point %>
              </span>
          <% end %>&nbsp;
          <br class="visible-xs-block"><br class="visible-xs-block"><br class="visible-xs-block">
          <span style="font-size:12pt;" class="alert alert-info">
                  評価ポイント:<%= current_user.evaluation_point %>
                </span>&nbsp;
          <span style="font-size:12pt;" class="alert alert-warning">
                  合計ポイント:<%= current_user.total_point %>
                </span>
        </div>
      </div>
  <% end %>

  <%= yield %>
  </div>
  </body>
</html>