<script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
<script>
    jQuery(function () {
        jQuery('#all_body').on({
            'mousemove': function () {
                if (jQuery('input[name=q1]:checked').val() == "0" && jQuery('input[name=q2]:checked').val() == "0" && jQuery('input[name=q3]:checked').val() == "1" && jQuery('input[name=q4]:checked').val() == "0") {
                    jQuery("#link").prop("disabled", false);
                }
                else {
                    jQuery("#link").prop("disabled", true);
                }
                if (jQuery('input[name=q1]:checked').val() == "0") {
                    jQuery("#q1ans").text("正解！！！");
                }
                else if (jQuery('input[name=q1]:checked').val() == "1") {
                    jQuery("#q1ans").text("不正解（扇子のことで、京都の様子は分かりません）");
                }
                if (jQuery('input[name=q2]:checked').val() == "0") {
                    jQuery("#q2ans").text("正解！！！");
                }
                else if (jQuery('input[name=q2]:checked').val() == "1") {
                    jQuery("#q2ans").text("不正解（願望と想像で、京都の様子は分かりません）");
                }
                if (jQuery('input[name=q3]:checked').val() == "1") {
                    jQuery("#q3ans").text("正解！！！");
                }
                else if (jQuery('input[name=q3]:checked').val() == "0") {
                    jQuery("#q3ans").text("不正解（祇園祭近辺は暑く，人が多いという様子が分かります）");
                }
                if (jQuery('input[name=q4]:checked').val() == "0") {
                    jQuery("#q4ans").text("正解！！！");
                }
                else if (jQuery('input[name=q4]:checked').val() == "1") {
                    jQuery("#q4ans").text("不正解（バラが見頃だということは分かりますが、宣伝だと思われます）");
                }
            }
        });
    });
</script>

