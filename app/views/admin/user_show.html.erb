<br>
<%= link_to '戻る', admin_user_list_path %>

<h1><%= @user.username %>　　<%= @ranking %>位</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <ul>
        <li>収集ツイート数: <%= @user.tweet_count %></li>
        <li>承認ツイート数: <%= @user.accept_count %></li>
        <li>非承認ツイート数: <%= @user.reject_count %></li>
        <li>審査中ツイート数: <%= @user.pending_count %></li>
        <li>評価ツイート数: <%= @user.evaluation_count %></li>
        <br>
        <li>収集ポイント: <%= @user.accept_point %></li>
        <li>評価ポイント: <%= @user.evaluation_point %></li>
        <li>合計ポイント: <%= @user.total_point %></li>
        <li>支払ポイント: <input id='pay' type="number" value=<%= @user.payment %>></li>
        <li>未払ポイント: <%= @user.rest_point %></li>
      </ul>
    </div>
    <div class="col-md-6">
      <label for="memo">メモ</label><br>
      <textarea id="memo" name="memo" cols="50" rows="5"><%= @user.memo %></textarea>
      <br><br>
      <input type="button" id="s_button" value="送信"><br><br>
      <p>収集ツイート承認率 : <%= @user.insert_rate %>%</p>
      <p>評価：accept率 : <%= @accept_rate %>%</p>
      <p>評価：手動ツイートaccept率 : <%= @manual_accept_rate %>%</p>
      <p>評価：自動ツイートreject率 : <%= @auto_reject_rate %>%</p>
    </div>
  </div>
</div>

<div class="row">
  <h3>収集ツイート</h3>
  <table class="table table-bordered table-responsive table-striped">
    <tr>
      <th>収集ツイート</th>
      <th>適切数</th>
      <th>不適切数</th>
      <th>評価数</th>
    </tr>
    <% @user.tweets.each do |t| %>
        <tr>
          <td><%= t.text %></td>
          <td><%= t.accept_count %></td>
          <td><%= t.reject_count %></td>
          <td><%= t.votes_count %></td>
        </tr>
    <% end %>
  </table>

  <h3>評価ツイート（適切）</h3>
  <table class="table table-bordered table-responsive table-striped">
    <tr>
      <th>収集ツイート</th>
    </tr>
    <% @accept.each do |t| %>
        <tr>
          <td><%= t.text %></td>
        </tr>
    <% end %>
  </table>

  <h3>評価ツイート（不適切）</h3>
  <table class="table table-bordered table-responsive table-striped">
    <tr>
      <th>評価ツイート</th>
    </tr>
    <% @reject.each do |t| %>
        <tr>
          <td><%= t.text %></td>
        </tr>
    <% end %>
  </table>
</div>


<script>
    jQuery(function () {
        jQuery('#s_button').on({
            'click': function () {
                str = jQuery('#memo').val()
                point = jQuery('#pay').val()
                jQuery.ajax({
                    url: '<%= admin_pay_url %>',
                    type: "GET",
                    data: {memo: str, pay: point, user:<%= @user.id %>}
                });
            }
        });
    });
</script>